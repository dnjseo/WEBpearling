<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pearling.web.repository.DiaryLikeRepository">
      
   <select id="findById" resultType="com.pearling.web.entity.DiaryLike">
      select * from diary_like 
      where member_id=#{memberId} and menu_id=#{menuId}
   </select>
   
   <select id="countByDiary" resultType="int">
      select count(diary_id) from diary_like 
      where diary_id=#{diaryId}
   </select>
   
   <insert id="save" parameterType="com.pearling.web.entity.DiaryLike">
      insert into diary_like(diary_id, member_id) values(#{diaryId}, #{memberId})
   </insert>
   
   <delete id="delete" parameterType="com.pearling.web.entity.DiaryLike">
	  delete from diary_like
	  where member_id=#{memberId} and diary_id=#{diaryId}
   </delete>
   
</mapper>