<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pearling.web.repository.GuestbookRepository">
   <select id="findAll" resultType="com.pearling.web.entity.Guestbook">     
      select *
      from guestbook 
      regdate desc
   </select>
   <select id="findByAll" resultType="Guestbook">
      select *
      from guestbook
      <if test="toId != null">
         where to_id = #{toId}
      </if>
      order by regdate desc
   </select>
   <select id="findById" resultType="GuestbookView">
      select *
      from guestbook
      where id = #{id}
   </select>
   <select id="count" resultType="int">
      SELECT COUNT(*) FROM guestbook
      <if test="toId != null">
         WHERE to_id = #{toId}
      </if>
   </select>
   <insert id="insert" parameterType="com.pearling.web.entity.Guestbook">
      insert into guestbook (content, regdate, from_id, to_id)
      values (#{content}, #{regdate}, #{fromId}, #{toId})
   </insert>
   <update id="update" parameterType="com.pearling.web.entity.Guestbook">
      update guestbook
      set content = #{content}
      where id = #{id}
   </update>
   <delete id="delete" parameterType="int">
      delete from guestbook
      where id = #{id}
   </delete>
</mapper>
