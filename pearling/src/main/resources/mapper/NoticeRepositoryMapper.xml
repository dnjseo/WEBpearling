<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pearling.web.repository.NoticeRepository">
   <select id="findAll" resultType="com.pearling.web.entity.Notice">
      select *
      from notice
   </select>
   <select id="findById" resultType="com.pearling.web.entity.Notice" parameterType="int">
      select *
      from notice
      where id=#{id}
</select>

</mapper>