<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pearling.web.repository.NoticeRepository">
   <select id="findAll" resultType="com.pearling.web.entity.Notice">
      select *
      from notice
   </select>

   <select id="findById" resultType="com.pearling.web.entity.Notice" parameterType="int">
      select *
      from notice
      where id=#{id}
   </select>

   <insert id="save">
      insert into notice (title, content, role_id)
      values (#{title}, #{content}, #{roleId})
   </insert>

   <delete id="delete">
      delete from notice
      where id = #{id}
   </delete>

  	<update id="update">
    update notice
      <set>
         <if test="title != null">title = #{title},</if>
         <if test="content != null">content = #{content},</if>
         <if test="roleId != null">role_id = #{roleId}</if>
      </set>
   where id = #{id}
   </update>

</mapper>